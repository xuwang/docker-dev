#!/bin/bash
set -e #-x

APPS=${APPS:-/mnt/apps}

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"
. $SCRIPT_HOME/env.sh

#build first
dockbuild_if_missing synapse-etcd

# start the load balancer 
SYN=$(docker run \
    -d \
	-e SYNAPSE_APP=nodeapp \
	-e SYNAPSE_PORT=8080 \
	--link etcd:etcd \
    -p 8080:8080 \
    --name synapse-etcd \
    synapse-etcd
    )
echo "Started load balancer in container $SYN
to see it's working: curl http://localhost:8080"
