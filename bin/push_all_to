#!/bin/bash

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"

if [ -z $1 ]
    then echo "Usage: $0 <docker-registry>"
fi

for dir in $SCRIPT_HOME/../images/*/
do
    cd $dir
	image_name=${PWD##*/}           # i.e. $(basename $PWD)
	# echo "Pushing $image_name"
	$SCRIPT_HOME/dockpush $image_name $1
done
